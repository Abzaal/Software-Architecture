{
  "files.associations": {
    "*.tex": "latex"
  },
  "files.autoSave": "afterDelay",
  "editor.formatOnSave": true,
  "[latex]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": true
    }
  },
  "triggerTaskOnSave.tasks": {
    "Run Docker Compose for LaTeX": [
      "*.tex", // <-- Glob pattern to specify which files should trigger the task
    ],
  }
}